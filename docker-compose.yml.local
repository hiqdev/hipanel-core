version: '3'

services:
  selenium:
    image: selenium/standalone-chrome:3.141.0
    networks:
      - local-network
      - proxy-network
      - hiapi-network
    volumes:
      - /dev/shm:/dev/shm

  nginx:
    image: nginx:latest
    ports:
      - "80"
    volumes:
      - ./:/app
      - ./.docker/nginx/etc/nginx/conf.d:/etc/nginx/conf.d
      - ./.docker/nginx/var/log/nginx:/var/log/nginx
    networks:
      local-network:
      proxy-network:
      hiapi-network:
        aliases:
          - "${HOSTS}"
    environment:
      - "VIRTUAL_HOST=${HOSTS}"
      - "LETSENCRYPT_HOST=${HOSTS}"
      - "LETSENCRYPT_EMAIL=devteam@hiqdev.com"
      - "LETSENCRYPT_STANDALONE_CERTS=${LETSENCRYPT_STANDALONE_CERTS}"

  php-fpm:
    image: hiqdev/php:7.4-fpm
    volumes:
      - ./:/app
      - ./.docker/php/var/log/php:/var/log/php
    networks:
      hiapi-network:
      local-network:
        aliases:
          - local-php-fpm
    extra_hosts:
      - "${API_HOSTS_LINE}"
    environment:
      - "ENV=${ENV}"
      - "PHP_IDE_CONFIG=serverName=${HOSTS}"

networks:
  local-network:
    driver: bridge
  hiapi-network:
    external:
      name: "${HIAPI_DIST}"
  proxy-network:
    external:
      name: "nginx-proxy-network-${REAL_IP}"
